 <% if user_signed_in? %>
<h1>Meine Bücher</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Pages</th>
      <th>Title</th>
      <th>Public date</th>
      <th>Description</th>
      <th>Autoren</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.pages %></td>
        <td><%= book.title %></td>
        <td><%= book.public_date %></td>
        <td><%= book.description %></td>
        <td><%= book.autoren %></td>
        <td><%= link_to 'Details', book %></td>
        <td><%= link_to 'Bearbeiten', edit_book_path(book) %></td>
        <td><%= link_to 'Löschen', book, method: :delete, data: { confirm: 'Sind Sie sicher?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>