<%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(contact.errors.count, "Fehler") %> Kontakt konnte nicht erstellt werden:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :vorname %>
    <%= form.text_field :vorname, id: :contact_vorname, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :nachname %>
    <%= form.text_field :nachname, id: :contact_nachname, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, id: :contact_email, class: 'form-control' %>
  </div>

    <div class="btn-group">
    <%= form.submit 'Kontakt erstellen', class: 'btn login_btn-primary'%>
  </div>
<% end %>
